{
  "name": "@chargebee/sting-react-mcp",
  "version": "0.0.2-alpha.0",
  "description": "Model Context Protocol implementation for Sting Design System",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist",
    "/knowledgebase"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "cross-env NODE_ENV=production sh -c \"tsc && chmod +x dist/server.js \"",
    "dev": "tsc --watch",
    "start-server": "node dist/server.js",
    "dev-server": "nodemon --exec ts-node server.ts",
    "inspect": "npx -y @modelcontextprotocol/inspector node dist/server.js",
    "publish:patch": "npm run build && npm version patch && npm publish && git push && git push --tags",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chargebee/cb-react-dls.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "chargebee",
    "sting"
  ],
  "author": "Chargebee",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chargebee/cb-react-dls/issues"
  },
  "homepage": "https://github.com/chargebee/cb-react-dls#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.12.0",
    "zod": "3.25.28"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "cross-env": "7.0.3",
    "typescript": "^5.2.2"
  }
}
